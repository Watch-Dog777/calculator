<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/etPInput"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
             >

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/cbPBin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二进制" />

            <TextView
                android:id="@+id/tvPBin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/cbPOct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="八进制" />

            <TextView
                android:id="@+id/tvPOct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/cbPDec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十进制" />

            <TextView
                android:id="@+id/tvPDec"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="0" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <CheckBox
                android:id="@+id/cbPHex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十六进制" />

            <TextView
                android:id="@+id/tvPHex"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="0" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="6" >
            
            <Button
                android:id="@+id/btnPClear"
                android:layout_row="0"
                android:layout_column="0"             
                android:layout_gravity="left|top"
                android:text="Clear" />
            
            <Button
                android:id="@+id/btnPBack"
                android:layout_row="0"
                android:layout_column="1"             
                android:layout_gravity="left|top"
                android:text="Back" />

            <Button
                android:id="@+id/btnPLsh"
                android:layout_row="1"
                android:layout_column="0"             
                android:layout_gravity="left|top"
                android:text="Lsh" />
            <Button
                android:id="@+id/btnPRsh"
                android:layout_row="1"
                android:layout_column="1"             
                android:layout_gravity="left|top"
                android:text="Rsh" />
            <Button
                android:id="@+id/btnPAnd"
                android:layout_row="1"
                android:layout_column="2"             
                android:layout_gravity="left|top"
                android:text="And" />
            <Button
                android:id="@+id/btnPOr"
                android:layout_row="1"
                android:layout_column="3"             
                android:layout_gravity="left|top"
                android:text="Or" />
            <Button
                android:id="@+id/btnPMultiply"
                android:layout_row="1"
                android:layout_column="4"             
                android:layout_gravity="left|top"
                android:text="X" />
            
            <Button
                android:id="@+id/btnPA"
                android:layout_row="2"
                android:layout_column="0"             
                android:layout_gravity="left|top"
                android:text="A" />
            <Button
                android:id="@+id/btnPB"
                android:layout_row="2"
                android:layout_column="1"             
                android:layout_gravity="left|top"
                android:text="B" />
            <Button
                android:id="@+id/btnPC"
                android:layout_row="2"
                android:layout_column="2"             
                android:layout_gravity="left|top"
                android:text="C" />
            <Button
                android:id="@+id/btnPD"
                android:layout_row="2"
                android:layout_column="3"             
                android:layout_gravity="left|top"
                android:text="D" />
            <Button
                android:id="@+id/btnPDivide"
                android:layout_row="2"
                android:layout_column="4"             
                android:layout_gravity="left|top"
                android:text="/" />
            
            <Button
                android:id="@+id/btnPE"
                android:layout_row="3"
                android:layout_column="0"             
                android:layout_gravity="left|top"
                android:text="E" />
            <Button
                android:id="@+id/btnPF"
                android:layout_row="3"
                android:layout_column="1"             
                android:layout_gravity="left|top"
                android:text="F" />
            <Button
                android:id="@+id/btnP9"
                android:layout_row="3"
                android:layout_column="2"             
                android:layout_gravity="left|top"
                android:text="9" />
            <Button
                android:id="@+id/btnP8"
                android:layout_row="3"
                android:layout_column="3"             
                android:layout_gravity="left|top"
                android:text="8" />
            <Button
                android:id="@+id/btnPMinus"
                android:layout_row="3"
                android:layout_column="4"             
                android:layout_gravity="left|top"
                android:text="-" />
            
            <Button
                android:id="@+id/btnP7"
                android:layout_row="4"
                android:layout_column="0"             
                android:layout_gravity="left|top"
                android:text="7" />
            <Button
                android:id="@+id/btnP6"
                android:layout_row="4"
                android:layout_column="1"             
                android:layout_gravity="left|top"
                android:text="6" />
            <Button
                android:id="@+id/btnP5"
                android:layout_row="4"
                android:layout_column="2"             
                android:layout_gravity="left|top"
                android:text="5" />
            <Button
                android:id="@+id/btnP4"
                android:layout_row="4"
                android:layout_column="3"             
                android:layout_gravity="left|top"
                android:text="4" />
            <Button
                android:id="@+id/btnPAdd"
                android:layout_row="4"
                android:layout_column="4"             
                android:layout_gravity="left|top"
                android:text="+" />
            
            <Button
                android:id="@+id/btnP3"
                android:layout_row="5"
                android:layout_column="0"             
                android:layout_gravity="left|top"
                android:text="3" />
            <Button
                android:id="@+id/btnP2"
                android:layout_row="5"
                android:layout_column="1"             
                android:layout_gravity="left|top"
                android:text="2" />
            <Button
                android:id="@+id/btnP1"
                android:layout_row="5"
                android:layout_column="2"             
                android:layout_gravity="left|top"
                android:text="1" />
            <Button
                android:id="@+id/btnP0"
                android:layout_row="5"
                android:layout_column="3"             
                android:layout_gravity="left|top"
                android:text="0" />
            <Button
                android:id="@+id/btnPEqual"
                android:layout_row="5"
                android:layout_column="4"             
                android:layout_gravity="left|top"
                android:text="=" />
           
        </GridLayout>

    </LinearLayout>

</RelativeLayout>