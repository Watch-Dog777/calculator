<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/input"
            android:gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <requestFocus />
        </EditText>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="二进制" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="0" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="八进制" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="0" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十六进制" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="0" />
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="十进制" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="0" />
        </LinearLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="6" >

            <Button
                android:id="@+id/btnLsh"
                android:layout_row="0"
                android:layout_column="0"             
                android:layout_gravity="left|top"
                android:text="Lsh" />
            <Button
                android:id="@+id/btnRsh"
                android:layout_row="0"
                android:layout_column="1"             
                android:layout_gravity="left|top"
                android:text="Rsh" />
            <Button
                android:id="@+id/btnAnd"
                android:layout_row="0"
                android:layout_column="2"             
                android:layout_gravity="left|top"
                android:text="And" />
            <Button
                android:id="@+id/btnOr"
                android:layout_row="0"
                android:layout_column="3"             
                android:layout_gravity="left|top"
                android:text="Or" />
            <Button
                android:id="@+id/btnMultiply"
                android:layout_row="0"
                android:layout_column="4"             
                android:layout_gravity="left|top"
                android:text="X" />
            
            <Button
                android:id="@+id/btnA"
                android:layout_row="1"
                android:layout_column="0"             
                android:layout_gravity="left|top"
                android:text="A" />
            <Button
                android:id="@+id/btnB"
                android:layout_row="1"
                android:layout_column="1"             
                android:layout_gravity="left|top"
                android:text="B" />
            <Button
                android:id="@+id/btnC"
                android:layout_row="1"
                android:layout_column="2"             
                android:layout_gravity="left|top"
                android:text="C" />
            <Button
                android:id="@+id/btnD"
                android:layout_row="1"
                android:layout_column="3"             
                android:layout_gravity="left|top"
                android:text="D" />
            <Button
                android:id="@+id/btnDivide"
                android:layout_row="1"
                android:layout_column="4"             
                android:layout_gravity="left|top"
                android:text="/" />
            
            <Button
                android:id="@+id/btnE"
                android:layout_row="2"
                android:layout_column="0"             
                android:layout_gravity="left|top"
                android:text="E" />
            <Button
                android:id="@+id/btnF"
                android:layout_row="2"
                android:layout_column="1"             
                android:layout_gravity="left|top"
                android:text="F" />
            <Button
                android:id="@+id/btn9"
                android:layout_row="2"
                android:layout_column="2"             
                android:layout_gravity="left|top"
                android:text="9" />
            <Button
                android:id="@+id/btn8"
                android:layout_row="2"
                android:layout_column="3"             
                android:layout_gravity="left|top"
                android:text="8" />
            <Button
                android:id="@+id/btnMinus"
                android:layout_row="2"
                android:layout_column="4"             
                android:layout_gravity="left|top"
                android:text="-" />
            
            <Button
                android:id="@+id/btn7"
                android:layout_row="3"
                android:layout_column="0"             
                android:layout_gravity="left|top"
                android:text="7" />
            <Button
                android:id="@+id/btn6"
                android:layout_row="3"
                android:layout_column="1"             
                android:layout_gravity="left|top"
                android:text="6" />
            <Button
                android:id="@+id/btn5"
                android:layout_row="3"
                android:layout_column="2"             
                android:layout_gravity="left|top"
                android:text="5" />
            <Button
                android:id="@+id/btn4"
                android:layout_row="3"
                android:layout_column="3"             
                android:layout_gravity="left|top"
                android:text="4" />
            <Button
                android:id="@+id/btnAdd"
                android:layout_row="3"
                android:layout_column="4"             
                android:layout_gravity="left|top"
                android:text="+" />
            
            <Button
                android:id="@+id/btn3"
                android:layout_row="4"
                android:layout_column="0"             
                android:layout_gravity="left|top"
                android:text="3" />
            <Button
                android:id="@+id/btn2"
                android:layout_row="4"
                android:layout_column="1"             
                android:layout_gravity="left|top"
                android:text="2" />
            <Button
                android:id="@+id/btn1"
                android:layout_row="4"
                android:layout_column="2"             
                android:layout_gravity="left|top"
                android:text="1" />
            <Button
                android:id="@+id/btn0"
                android:layout_row="4"
                android:layout_column="3"             
                android:layout_gravity="left|top"
                android:text="0" />
            <Button
                android:id="@+id/btnEqual"
                android:layout_row="4"
                android:layout_column="4"             
                android:layout_gravity="left|top"
                android:text="=" />
           
        </GridLayout>

    </LinearLayout>

</RelativeLayout>